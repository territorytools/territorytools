@using Microsoft.AspNetCore.Mvc.Localization
@model ReportIndexPage;
@inject IViewLocalizer Localizer
@{
    ViewData["Title"] = Localizer["TitleTerritoryReports"].Value;
}

<h3 class="display-4 text-center">@ViewData["Title"]</h3>

<div class="container" style="max-width:500px;">
    <div class="d-flex flex-column">
        @*<a class="p-2 m-2 btn btn-outline-primary" asp-controller="Report" asp-action="SummarizeCompleted">@Localizer["YearlyTotals"]</a>*@
        <a class="p-2 m-2 btn btn-outline-secondary" asp-controller="Home" asp-action="Index"><i class="fas fa-arrow-left text-body"></i>@Localizer["MenuHomeButton"]</a>
        <a class="p-2 m-2 btn btn-outline-primary" asp-controller="Report" asp-action="NeverCompleted">@Localizer["TerritoriesNeverCompleted"]</a>
        <a class="p-2 m-2 btn btn-outline-primary" asp-controller="Report" asp-action="Available">@Localizer["AvailableTerritories"]</a>
        <a class="p-2 m-2 btn btn-outline-primary" asp-controller="Report" asp-action="ByPublisher">@Localizer["CheckedOutByPublishers"]</a>
        <a class="p-2 m-2 btn btn-outline-primary" asp-controller="Report" asp-action="YearlyCompletionSummary">@Localizer["YearlyTotals"]</a>
        <a class="p-2 m-2 btn btn-outline-primary" asp-controller="Report" asp-action="SummarizeCompleted">@Localizer["GeographicCompletionSummaryServiceYears"]</a>
        <a class="p-2 m-2 btn btn-outline-primary" asp-controller="Report" asp-action="SummarizeCompletedFromNow">@Localizer["GeographicCompletionSummaryFromNow"]</a>
        <a class="p-2 m-2 btn btn-outline-primary" asp-controller="Report" asp-action="AlbaUsers">@Localizer["AlbaUsers"]</a>
        <a class="p-2 m-2 btn btn-outline-primary" asp-controller="Report" asp-action="AssignmentHistory">@Localizer["AssignmentHistory"]</a>
    </div>
</div>
