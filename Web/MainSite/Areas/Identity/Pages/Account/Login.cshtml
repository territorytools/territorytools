@page
@model LoginModel

@{
    ViewData["Title"] = "Log in";
}

<h1>@ViewData["Title"]</h1>
<div class="row">
    <div class="col-md-6 col-md-offset-2">
        <section>
            <h4>Use your Google or Microsoft account to log in.</h4>
            <p>It's way easier, and more secure, than having to remember another password!  But don't worry if you don't have a Google or Microsoft account just click 'Account &amp; Password' below.</p>
            <hr />
            @{
                if ((Model.ExternalLogins?.Count ?? 0) == 0)
                {
                    <div>
                        <p>
                            There are no external authentication services configured. See <a href="https://go.microsoft.com/fwlink/?LinkID=532715">this article</a>
                            for details on setting up this ASP.NET application to support logging in via external services.
                        </p>
                    </div>
                }
                else
                {
                    <form id="external-account" asp-page="./ExternalLogin" asp-route-returnUrl="@Model.ReturnUrl" method="post" class="form-horizontal">
                        <div>
                            <p>
                                <button type="submit" class="btn p-0" name="provider" value="Microsoft" title="Log in using your Microsoft account"><img src="/main/ms-symbollockup_signin_light.png"/></button>
                                <button type="submit" class="btn p-0" name="provider" value="Google" title="Log in using your Google account"><img src="/main/btn_google_signin_dark_normal_web.png" /></button>
                                <a href="LoginPassword" class="btn btn-info m-2">Account &amp; Password</a>
                            </p>
                        </div>
                    </form>
                }
            }
        </section>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
